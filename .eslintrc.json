{
  "root": true,
  "overrides": [
    {
      "files": ["**/*.{js,mjs,cjs}"],
      "extends": ["eslint:recommended", "airbnb-base"],
      "env": {
        "browser": true,
        "es2021": true
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": ["import"],
      "rules": {
        "no-console": "off",
        "quotes": ["error", "single"],
        "indent": ["error", 2]
      }
    }
  ],
  "ignorePatterns": ["node_modules/", "dist/", "build/"]
}
